{
  "name": "SimplifyLaw",
  "description": "SimplifyLaw helps you understand hard to read legal texts such as laws or even Terms and Conditions of your favourite product, etc.",
  "version": "0.1",
  "manifest_version": 3,
  "permissions": ["activeTab", "tabs", "contextMenus", "storage"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }
} 